<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <div class="">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>

  <div class="">
    <%= f.collection_select :genre_id, Genre.all, :id,:name  %>
  </div>

  <div class="">
    <%= f.label :song_notes%>
    <input id="song_notes_1" name="song[note_contents][]">
    <%= f.label :song_notes%>
    <input id="song_notes_2" name="song[note_contents][]">

  </div>

  <%= f.submit %>
<% end %>
