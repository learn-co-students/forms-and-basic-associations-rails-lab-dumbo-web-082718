<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :name, :name %>
  <br />

  <%= f.fields_for :notes do |note| %>
  <%= note.label :"1", "Note:"%>
  <%= note.text_field :"1" %>
  <br />

  <%= f.fields_for :notes do |note| %>
  <%= note.label :"2", "Note:"%>
  <%= note.text_field :"2" %>
  <br />

  <%= f.fields_for :notes do |note| %>
  <%= note.label :"3", "Note:"%>
  <%= note.text_field :"3" %>
  <br />

  <% end %>

  <%= f.submit %>
  <% end %>
  <% end %>
  <% end %>
