<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.collection_select :genre_id, Genre.all, :name, :name %>

<p>
<%= f.fields_for :notes do |notes_form| %>
    <%= notes_form.label :"1", "Note Comment:"%>
    <%= notes_form.text_field :"1" %>
    <br />
    <%= notes_form.label :"2", "Note Comment:"%>
    <%= notes_form.text_field :"2" %>
    <br />
    <%= notes_form.label :"3", "Note Comment:"%>
    <%= notes_form.text_field :"3" %>
    <br />
<% end %>
</p>
  <%= f.submit %>
<% end %>
